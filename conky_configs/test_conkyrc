conky.config = {
    alignment = 'top_left',
    background = false,
    border_width = 1,
    cpu_avg_samples = 2,
	default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    draw_borders = false,
    draw_graph_borders = false,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'DejaVu Sans Mono:size=18:bold',
    gap_x = 180,
    gap_y = 90,
    minimum_height = 5,
	minimum_width = 5,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'desktop',
	own_window_transparent = true,
	own_window_argb_visual = true,
	double_buffer = true,
	stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = true,
    show_graph_range = false
}
-- ${color grey}Frequency (in GHz):$color $freq_g

conky.text = [[
${scroll 16 $nodename - $sysname $kernel on $machine | }
$hr
${color grey}Uptime:$color $uptime
${color grey}Frequency (in MHz):$color $freq
${color grey}RAM Usage:$color $mem/$memmax - $memperc%
${membar 4}
${color grey}Swap Usage:$color $swap/$swapmax - $swapperc%
${swapbar 4}
${memgraph 20,600 555555 AAAAAA -t}
$hr
${color grey}Total CPU Usage:$color $cpu%
$hr
${cpugraph cpu1 20,600 555555 AAAAAA -t}
${cpugraph cpu2 20,600 555555 AAAAAA -t}
${cpugraph cpu3 20,600 555555 AAAAAA -t}
${cpugraph cpu4 20,600 555555 AAAAAA -t}
${cpugraph cpu5 20,600 555555 AAAAAA -t}
${cpugraph cpu6 20,600 555555 AAAAAA -t}
$hr
${color grey}CPU1 Temp: ${platform coretemp.0/hwmon/hwmon1/ temp 1}C - ${color grey}CPU2 Temp: ${platform coretemp.0/hwmon/hwmon1/ temp 2}C
${color grey}CPU3 Temp: ${platform coretemp.0/hwmon/hwmon1/ temp 3}C - ${color grey}CPU4 Temp: ${platform coretemp.0/hwmon/hwmon1/ temp 4}C
${color grey}CPU5 Temp: ${platform coretemp.0/hwmon/hwmon1/ temp 5}C - ${color grey}CPU6 Temp: ${platform coretemp.0/hwmon/hwmon1/ temp 6}C
${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes
$hr

${color grey}File systems:
 / $color${fs_used /}/${fs_size /}
${fs_bar 6 /}
${color grey}Networking:
Up:$color ${upspeed eth0} ${color grey} - Down:$color ${downspeed eth0}
$hr
${color grey}Name              PID   CPU%   MEM%
${color lightgrey} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color lightgrey} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color lightgrey} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color lightgrey} ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
${color lightgrey} ${top name 5} ${top pid 5} ${top cpu 5} ${top mem 5}
${color lightgrey} ${top name 6} ${top pid 6} ${top cpu 6} ${top mem 6}
${color lightgrey} ${top name 7} ${top pid 7} ${top cpu 7} ${top mem 7}
${color lightgrey} ${top name 8} ${top pid 8} ${top cpu 8} ${top mem 8}
${color lightgrey} ${top name 9} ${top pid 9} ${top cpu 9} ${top mem 9}
${color lightgrey} ${top name 10} ${top pid 10} ${top cpu 10} ${top mem 10}
${color lightgrey} ${top name 11} ${top pid 11} ${top cpu 11} ${top mem 11}
${color lightgrey} ${top name 12} ${top pid 12} ${top cpu 12} ${top mem 12}
]]
